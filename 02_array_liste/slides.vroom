---- center
Funzioni utili per
la manipolazione
degli array
---- perl, i10
use strict;
use warnings;
use feature 'say';

my @array = (1 .. 10);

my $ultimo_elemento = pop @array;
say "$ultimo_elemento - @array";
---- perl, i10
use strict;
use warnings;
use feature 'say';

my @array = (1 .. 10);

my $primo_elemento = shift @array;
say "$primo_elemento - @array";
---- perl, i10
use strict;
use warnings;
use feature 'say';

# I loro simmetrici (pop/push)
my @array = (1 .. 10);

push @array, 11, 12, 13;
say "@array";
---- perl, i10
use strict;
use warnings;
use feature 'say';

# I loro simmetrici (shift/unshift)
my @array = (1 .. 10);

unshift @array, -2, -1, 0;
say "@array";
---- perl, i10
use strict;
use warnings;
use feature 'say';

# Altre funzioni utili
my @array = (1 .. 10);

my @array2 = reverse @array;
---- perl, i10
use strict;
use warnings;
use feature 'say';

# Altre funzioni utili
my @array = (1, 10, 6, 4, 3, 7, 5, 8, 3, 9);

my @array_ordinato = sort {$a <=> $b} @array;
say "@array_ordinato";
---- perl, i10
use strict;
use warnings;
use feature 'say';

# Altre funzioni utili
my @array = (1, 10, 6, 4, 3, 7, 5, 8, 3, 9);

my @array_ordinato = sort {$a <=> $b} @array;
say "@array_ordinato";

